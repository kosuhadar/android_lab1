<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:baselineAligned="false">

    <!-- Field Size Spinner -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="Field Size:" />

        <Spinner
            android:id="@+id/field_size_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:entries="@array/fieldSizes" />
    </TableRow>

    <!-- Gap -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- Timer Spinner -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer:"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/timer_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/timers"
            android:layout_marginStart="8dp"/>
    </TableRow>

    <!-- Gap -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- Frame Change Spinner -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frame Change:"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/frame_change_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/frameChanges"
            android:layout_marginStart="8dp"/>
    </TableRow>

    <!-- Gap -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <!-- Start Button -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />
    </TableRow>
</TableLayout>